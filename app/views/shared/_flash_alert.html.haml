- if !flash.empty?
  .alert.alert-dismissible.alert-danger{:role => "alert"}
    %button.close{"aria-label" => "Close", "data-dismiss" => "alert", :type => "button"}
      %span{"aria-hidden" => "true"} &times;
    - flash.each do |key, value|
      - if value.is_a? String
        %p{class: "alert" + key}
          = value