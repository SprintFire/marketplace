.card
  .card-header Log in

  .card-block
    = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|

      .form-group.form-group-default
        = f.label :email
        .controls
          = f.email_field :email, autofocus: true, class: "form-control", required: true, placeholder: "Your Email", tabindex: "1"

      .form-group.form-group-default
        = f.label :password
        .pull-xs-right 
          %small= link_to "Forgot password?", new_password_path(resource_name)
        .controls
          = f.password_field :password, autocomplete: "off", class: "form-control", required: true, placeholder: "Your Password", tabindex: "2"

      .form-group
        .row
          .col-md-6
            %small
              New?
              = link_to "Signup with email.", new_registration_path(resource_name)

          .col-md-6.text-xs-right
            = f.submit "Sign in", class: "btn btn-primary"
      
  .card-footer
    = render "devise/shared/links"
