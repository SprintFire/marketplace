%h2
  = @product.name
  %strongr Amount: &euro; #{@product.price}
%h4 Current cards
.card
  .card-block
    - unless @cards.empty?
      - @cards.each do |card|
        .row
          .col-md-4
            %strong= card.card_brand
          .col-md-4
            = "**** **** **** " + card.card_last_4
          .col-md-4
            = link_to "Pay with this", checkout_current_card_path(customer_id: card.stripe_customer_id, id: @product.id), method: :post
%h3 Use new card
= form_tag(checkout_path(@product), method: :post) do
  %article
    - if flash[:error].present?
      #error_explanation
        %p= flash[:error]
  %script.stripe-button{"data-amount" => "#{@product.price * 100}", "data-description" => "#{@product.name}", "data-key" => Rails.configuration.stripe[:publishable_key], "data-locale" => "auto", :src => "https://checkout.stripe.com/checkout.js"}
