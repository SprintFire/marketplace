= @product.name

= form_tag(checkout_path(@product), method: :post) do
  %article
    - if flash[:error].present?
      #error_explanation
        %p= flash[:error]
    %label.amount
      %span Amount: #{@product.price}
  %script.stripe-button{"data-amount" => "#{@product.price * 100}", "data-description" => "A month's subscription", "data-key" => Rails.configuration.stripe[:publishable_key], "data-locale" => "auto", :src => "https://checkout.stripe.com/checkout.js"}
