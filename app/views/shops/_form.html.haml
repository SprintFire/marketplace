.container-fluid
	.row
		= form_for(@shop) do |f|
			= f.label :name
			= f.text_field :name
			%br/
			= f.label :shop_Name
			= f.text_field :slug
			%br/
			= f.label :description
			= f.text_area :description
			%br/
			= f.label :facebook_url
			= f.url_field :facebook_url
			%br/
			= f.label :twitter_username
			= f.url_field :twitter_username
			%br/
			= f.label :instagram_username
			= f.url_field :instagram_username
			%br/
			= f.label :contact_phone
			= f.telephone_field :contact_phone
			%br/
			= f.label :email_id
			= f.email_field :email_id
			%br/
			Location:
			%input#us2-address{:style => "width: 200px", :type => "text"}/
			#us2{:style => "width: 500px; height: 400px;"}
			:javascript
				$('#us2').locationpicker({
					location: {latitude: 53.348864, longitude: -6.2502467},
					radius: 0,
					inputBinding: {
						latitudeInput: $('#us2-lat'),
						longitudeInput: $('#us2-lon'),
						radiusInput: $('#us2-radius'),
						locationNameInput: $('#us2-address')
					}
				});
			%br/
			= f.submit(class: "btn btn-primary")
